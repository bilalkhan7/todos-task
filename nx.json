{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "workspaceLayout": { "appsDir": "apps", "libsDir": "libs" },

  "defaultBase": "main",

  "targetDefaults": {
    "build": { "cache": true },
    "test": { "cache": true }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "test"]
      }
    }
  }
}
